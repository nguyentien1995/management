<%layout('../../layout')%>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">customer</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <p id="errLog">
            <% if(status == 'fail') getErr(onErr); %>
            </p>
            <div class="panel panel-default">
                <div class="panel-heading">
                    Detail Customer
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <% if (status == 'success') { %>
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>firstName</th>
                                    <th>lastName</th>
                                    <th>UserName</th>
                                    <th>Address</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% customer.forEach(function(item){ %>
                                <tr class="odd gradeX">
                                    <td><%= item.firstName %></td>
                                    <td><%= item.lastName%></td>
                                    <td><%= item.username %></td>
                                    <td><%= item.address%></td>
                                    <td><%= item.email %></td>
                                    <td><%= item.phone %></td>
                                    <td><a href="/customer/attach/<%= item.username%>">Attach</a></td>
                                </tr>
                            <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <% } %>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script src="/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>
    <script>
    $(document).ready(function() {
        $('table').dataTable({
                responsive: true
        });
    });
    </script>
</body>
</html>
