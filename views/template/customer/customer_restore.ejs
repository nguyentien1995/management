<%layout('../../layout')%>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">customer</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <p id="errLog">
            <% if(status == 'fail') getErr(onErr); %>
            </p>
            <div class="panel panel-default">
                <div class="panel-heading">
                    List Customer
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <% if (status == 'success') { %>
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Email/Phone</th>
                                    <th>Full Name</th>
                                    <th>Create By</th>
                                    <th>Create Time</th>
                                    <th>Update By</th>
                                    <th>Update Time</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% customers.forEach(function(item){ %>
                                <tr class="odd gradeX">
                                    <td><%= (item.email != 'undefined') ? item.email : item.phone %></td>
                                    <td><%= item.firstName %> <%= item.lastName%></td>
                                    <td><%= item.createBy %></td>
                                    <td><%= item.createTime %></td>
                                    <td><%= item.updateBy %></td>
                                    <td><%= item.updateTime %></td>
                                    <td>
                                        <a class="restore" href="restore" id = "<%= (item.email != 'undefined') ? item.email : item.phone %>">RESTORE</a>
                                    </td>
                                </tr>
                            <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <% } %>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script src="/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>
    <script>
    $(document).ready(function() {
        $('table').dataTable({
                responsive: true
        });
    });
    $(document).ready(function(){
        $("a").click(function(e){
            if($(this).attr("class") == "restore") {
                e.preventDefault();
                var customer = $(this).attr("id");
                $.get("/customer/restore/" + customer )
                    .success(function(data){
                    if(data.status == 'success') {
                        getToastr(data);
                        $('#dataTables-example').load(document.URL +  ' #dataTables-example');
                    } else if(data.status == 'fail'){
                        getToastr(data);
                        getErr(data.onErr);
                    }
                });
            }
        });
    });

    function getToastr(data){
        var title, message;
        toastr.options = {
            "timeOut": "3000",
        }
        if(data.status == 'success'){
            title = "Success";
            message = "You have deleted a customer";
            toastr.options.onHidden = function(){
                location.reload();
            }
            toastr.success(message, title);
        } else if (data.status == 'fail'){
            title = "Fail";
            message = "You have failed in deleting a customer";
            toastr.error(message, title);
        }
    }
    
    </script>
</body>
</html>
